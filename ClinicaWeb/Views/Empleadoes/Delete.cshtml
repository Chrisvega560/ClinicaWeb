@model ClinicaWeb.Models.Empleado

@{
    ViewBag.Title = "Eliminar Empleado";
    Layout = "~/Views/Shared/_LayoutSis.cshtml";
    ViewBag.A6 = "active";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-exclamation-triangle"></i>
            Eliminar Empleado
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alerta!</h5>
            Usted esta a punto de borrar información importante!
        </div>
        <h3>¿Seguro que quiere eliminar este usuario?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Nombre del empleado
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nom_Empleado)
                </dd>

                <dt>
                    Correo Electronico
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User)
                </dd>

                <dt>
                    Cargo
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cargo.Descripcion)
                </dd>

            </dl>

        </div>
    </div>
    <!-- /.card-body -->
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Eliminar Definitivamente" class="btn btn-success" />
        <a href="@Url.Action("Index","empleadoes")" class="btn btn-danger">Cancelar</a>
    </div>
}
