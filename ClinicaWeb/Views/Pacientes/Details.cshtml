@model ClinicaWeb.Models.Paciente

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.P4 = "active";
}
<div class="page-bar" style="margin:0;">
    <div class="page-title-breadcrumb">
        <div class=" pull-left">
            <div class="page-title">Mi perfil de Usuario</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="profile-sidebar">
            <div class="card">
                <div class="card-body no-padding height-9">
                    <div class="row">
                        <div class="profile-userpic">
                            <img src="@Url.Content("~/Adminlte/dist/img/Santafe.png")" class="img-responsive" alt="">
                        </div>
                    </div>
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name"> @Html.DisplayFor(model => model.Nombre_pac)</div>
                        <div class="profile-usertitle-job"> @Html.DisplayFor(model => model.Edad) </div>
                    </div>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Cambiar Contraseña</b> <a href="@Url.Action("ChangePasword","Manage")" class="float-right">Ir a -></a>
                        </li>
                    </ul>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <a href="@Url.Action("Edit","Pacientes", new {id = Model.Id })" class="btn btn-primary btn-block"><b>Editar Perfil</b></a>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-text-width"></i>
                    Información personal
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre del Paciente</dt>
                    <dd class="col-sm-8">    @Html.DisplayFor(model => model.Nombre_pac)</dd>
                    <dt class="col-sm-4">Edad</dt>
                    <dd class="col-sm-8">    @Html.DisplayFor(model => model.Edad)</dd>
                    <dt class="col-sm-4">Celular</dt>
                    <dd class="col-sm-8">    @Html.DisplayFor(model => model.Celular)</dd>
                    <dt class="col-sm-4">Dirección</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-4">Nombre del Municipio</dt>
                    <dd class="col-sm-8">   @Html.DisplayFor(model => model.Municipio.Nombre_mun)</dd>
                    <dt class="col-sm-4">Tipo de Sexo</dt>
                    <dd class="col-sm-8">    @Html.DisplayFor(model => model.Sexo.TipoSexo)</dd>
                </dl>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>






