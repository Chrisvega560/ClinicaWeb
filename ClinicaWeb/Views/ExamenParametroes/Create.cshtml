@model ClinicaWeb.Models.ExamenParametro

@{
    ViewBag.Title = "Agregar Info";
    Layout = "~/Views/Shared/_LayoutSis.cshtml";
    ViewBag.A2AAAA = "active";
    ViewBag.A02 = "menu-open";
    ViewBag.A2 = "active";
}

<h3>Agregue Información</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Nombre Examen</label>
        <div class="col-md-10">
            @Html.DropDownList("ExamenId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ExamenId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Nombre Parametro</label>
        <div class="col-md-10">
            @Html.DropDownList("ParametroId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ParametroId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Aceptar" class="btn btn-success" />
            <a href="@Url.Action("Index","ExamenParametroes")" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
