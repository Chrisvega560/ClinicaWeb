@model ClinicaWeb.Models.Parametro

@{
    ViewBag.Title = "Editar Información";
    Layout = "~/Views/Shared/_LayoutSis.cshtml";
    ViewBag.A2 = "active";
    ViewBag.A02 = "menu-open";
    ViewBag.A2AA = "active";
}

<h3>Editar Informacion de los Parametros</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label>Nombre del Parametro</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nom_Parametro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nom_Parametro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Maximo del reactivo</label>
        <div class="col-md-10">
            @Html.DropDownList("ReactivoId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReactivoId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Aceptar" class="btn btn-success" />
            <a href="@Url.Action("Index","parametroes")" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
</div>
}
