@model ClinicaWeb.Models.Departamento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutSis.cshtml";
    ViewBag.A9A = "active";
    ViewBag.A9 = "active";
    ViewBag.A09 = "menu-open";

}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-exclamation-triangle"></i>
            Eliminar Información
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alerta!</h5>
            Usted esta a punto de borrar información importante!
        </div>
        <h3>¿Seguro que quiere eliminar esta información?</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nombre del Departamento
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre_dpto)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar Definitivamente" class="btn btn-success" />
                <a href="@Url.Action("Index","Departamentoes")" class="btn btn-danger">Cancelar</a>
            </div>
        }
    </div>

</div>
