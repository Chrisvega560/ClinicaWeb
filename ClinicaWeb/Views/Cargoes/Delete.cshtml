@model ClinicaWeb.Models.Cargo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutSis.cshtml";
    ViewBag.A11 = "active";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-exclamation-triangle"></i>
            Eliminar Cargo
        </h3>
    </div>
    <div class="card-body">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Alerta!</h5>
            Usted esta a punto de borrar información importante!
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Eliminar Definitivamente" class="btn btn-success" />
    <a href="@Url.Action("Index","cargoes")" class="btn btn-danger">Cancelar</a>
</div>
}
